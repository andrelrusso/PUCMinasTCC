@model PagedList<NaoConformidade>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Código</th>
            <th>Descrição</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.CurrentItens != null)
        {
            foreach (var item in Model.CurrentItens)
            {
                <tr>
                    <td><a asp-action="Detalhes" asp-route-id="@item.IdNaoConformidade" class="btn btn-info"><i class="fas fa-edit"></i>Editar</a></td>
                    <td>@Html.DisplayFor(modelItem => item.IdNaoConformidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescricaoNaoConformidade)</td>
                    <td>
                        @if (item.CodStatus == PUCMinasTCC.Domain.Enums.enumStatus.Ativo)
                        {
                            <span class="status text-success"><i class="fas fa-thumbs-up mr-5">Ativo</i></span>
                        }
                        else
                        {
                            <span class="status text-danger"><i class="fas fa-thumbs-down">Inativo</i></span>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

