@model NaoConformidadeModel
@{
    ViewData["Title"] = "Não Conformidades";
}
<script defer src="~/js/Usuario.js"></script>
<div class="card border-primary">
    <div class="card-header">@ViewData["Title"]</div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-1">
                <div class="form-group">
                    <label asp-for="Filtro.IdNaoConformidade" class="control-label"></label>
                    <input asp-for="Filtro.IdNaoConformidade" type="number" class="form-control" />
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="Filtro.DescricaoNaoConformidade" class="control-label"></label>
                    <input asp-for="Filtro.DescricaoNaoConformidade" class="form-control" />
                </div>
            </div>
     
           
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="Filtro.CodStatus" class="control-label"></label>
                    <select asp-for="Filtro.CodStatus" asp-items="Model.Status" class="form-control"></select>
                </div>
            </div>
            <div class="col">
                <a asp-action="Detalhes" class="btn btn-success"><i class="fas fa-plus"></i>Adicionar</a>
                <button type="button" class="btn btn-warning" onclick="Pesquisar('@Url.Action("Pesquisar")')"><i class="fas fa-search"></i> Pesquisar</button>
            </div>
        </div>
    </div>
</div>
<div id="gridItems">
    <partial name="_ListaItens" model="Model.Itens" />
</div>

